
{{>adminheader}}


    <style>
      /* Reset some default styles */ body, h1, h2, h3, h4, h5, h6, p, ul, li {
      margin: 0; padding: 0; } body { font-family: Arial, sans-serif;color: black;
      background-color: #e7e5e5; } .admin-header { background-color: #333;
      color: #fff; padding: 1rem; display: flex; justify-content: space-between;
      align-items: center; } .admin-header h1 { font-size: 1.5rem; }
      .admin-content { padding: 2rem; } .offer-form { border: 1px solid #121212;
      padding: 1rem; margin-bottom: 2rem; background-color: #fff; } .offer-form
      label, .offer-form input, .offer-form select, .offer-form button {
      display: block; margin-bottom: 1rem; } .offer-list ul { list-style: none;
      } .offer-list li { border: 1px solid #ccc; padding: 1rem; margin-bottom:
      1rem; background-color: #fff; display: flex; justify-content:
      space-between; align-items: center; } .offer-list .category { font-weight:
      bold; } .delete-offer { background-color: #e74c3c; color: #fff; border:
      none; padding: 0.5rem 1rem; cursor: pointer; }

    </style>
 
 
    
    
    <main class="admin-content">
      
      <div class="offer-form">
        <h3>Create New Offer</h3>
        <form action="/admin/add-offer" method="POST">
          <label for="offername"></label>
          <input
            type="text"
            name="offername"
            id="offername"
            placeholder="Offer Name"
          />
          <label for="category">Select Category:</label>

          <select name="category" id="category">
            {{#each availableCategories}}
              <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
          </select>

          <label for="percentage">Offer Percentage:</label>
          <input
            type="number"
            name="percentage"
            id="percentage"
            min="0"
            max="100"
            required
          />
          <button type="submit">Create Offer</button>
        </form>
      </div>
      <div class="offer-list">
        <h3>Current Offers</h3>
        <ul>
          
          {{#each availableOffers}}
            <li>
              <form action="/admin/delete-offer/{{this._id}}" method="post">
              <span class="category mr-5" style="width:400px">{{this.category}}</span>
              <span class="percentage ml-5 mr-5">{{this.discountPercentage}}</span>
              <span class="ml-5"><button type="submit" class="delete-offer">Delete</button></span>
            </li>
             </form>
          {{/each}}
         
        </ul>
      </div>
    </main>
 
 {{>adminfooter}}